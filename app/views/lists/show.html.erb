<div class="container-fluid text-center border-bottom w-100"><h1><%= @list.name %></h1></div>

<%= link_to "Add a movie", new_list_bookmark_path(@list)  %>
<%= link_to "Delete this list", list_path(@list), method: :delete, data: { confirm: 'Are you sure you want to delete this list?' } %>

<div class="container d-flex">
  <div class="row">
    <% @list.movies.each do |movie| %>
    <% bookmark = Bookmark.find_by(list: @list, movie: movie)%>
      <div class="card" style="width: 18rem;">
        <%= image_tag "#{movie.poster}", alt: "Le Wagon", class:"card-img-top" %>
        <div class="card-body">
          <h5 class="card-title"><%= movie.title %>-<%= movie.rating %><i class="fas fa-star"></i></h5>
          <p class="card-text"><%= movie.overview %></p>
          <%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: {confirm: "Are you sure you want to remove this bookmark?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= link_to "Homepage", lists_path  %>


