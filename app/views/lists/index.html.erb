<div class="container-fluid text-center border-bottom w-100"><h1>Save any kind of movies</h1></div>

<div class="container">
  <div class="card-image">
    <h5 class="mt-3">My lists</h5>

  </div>
</div>

<div class="container d-flex justify-content-center row">
  <% @lists.each do |list| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="https://images.unsplash.com/photo-1485846234645-a62644f84728?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1040&q=80" alt="Card image cap">
      <div class="card-body">
        <h5 class ="card-title btn btn-outline-primary"><%= link_to list.name, list_path(list) %></h5>
      </div>
    </div>
  <% end %>
</div>

<button class="btn btn-primary" type="submit"><%= link_to "Create a movie list", new_list_path %></button>
